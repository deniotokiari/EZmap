<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>

        <item name="mapControlsStyle">@style/MapControlsStyle</item>
        <item name="spaceMedium">@dimen/space_medium</item>

        <item name="colorPrimaryWithAlpha">@color/color_primary_with_alpha</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.EZmap" parent="Theme.Base">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryWithAlpha</item>
        <item name="android:navigationBarColor">?colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
</resources>